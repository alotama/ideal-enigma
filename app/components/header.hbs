<header class="flex justify-between px-10 py-5">
    <figure class="w-40 h-8">
        <img src="images/logo.png" alt="Special FX"/>
    </figure>

    {{#if (gte this.unitsInCart 1)}}
    <button class="bg-gray-50 text-violet-700 shadow-sm p-2 flex" type="button">
        <this.ShoppingCart />
        <span class="px-4 font-bold">{{this.unitsInCart}}</span>
        <span>{{this.totalPayable}}</span>
    </button>
    {{else}}        
    <button class="bg-gray-50 shadow-sm p-2" type="button">
        <this.ShoppingCart />
    </button>
    {{/if}}


</header>